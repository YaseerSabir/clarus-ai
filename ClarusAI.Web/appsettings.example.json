{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=ClarusAI;Trusted_Connection=true;MultipleActiveResultSets=true;Encrypt=true;TrustServerCertificate=false;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "RequireHttps": true,
    "KeyVaultUrl": "https://YOUR_KEYVAULT.vault.azure.net/",
    "MaxFileUploadSize": 104857600,
    "AllowedFileTypes": [
      "image/jpeg",
      "image/png",
      "image/dicom",
      "application/dicom"
    ]
  },
  "HIPAA": {
    "DataRetentionDays": 2555,
    "RequireAuditLogging": true,
    "EnableDataEncryption": true,
    "AllowedIpRanges": []
  },
  "JWT": {
    "SecretKey": "YOUR_JWT_SECRET_KEY_HERE_MINIMUM_32_CHARS",
    "Issuer": "ClarusAI",
    "Audience": "ClarusAI-Users",
    "ExpirationMinutes": 60
  },
  "Azure": {
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_CLIENT_ID",
    "ClientSecret": "YOUR_CLIENT_SECRET"
  }
}