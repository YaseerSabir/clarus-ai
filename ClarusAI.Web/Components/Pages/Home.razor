@page "/"
@inject IJSRuntime JSRuntime

<PageTitle>ClarusAI - Healthcare AI Intelligence Platform</PageTitle>

<!-- Hero Section -->
<section class="hero-section bg-gradient-primary">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="hero-title text-white mb-4">
                    The Future of <span class="text-warning">Healthcare AI</span> is Here
                </h1>
                <p class="hero-subtitle text-white-50 mb-4 fs-5">
                    ClarusAI revolutionizes medical imaging analysis with HIPAA-compliant AI that helps clinicians 
                    and radiologists deliver faster, more accurate diagnoses.
                </p>
                <div class="hero-buttons">
                    <button class="btn btn-warning btn-lg me-3" onclick="scrollToDemo()">
                        <i class="bi bi-play-circle me-2"></i>Try Demo
                    </button>
                    <button class="btn btn-outline-light btn-lg" onclick="scrollToContact()">
                        <i class="bi bi-calendar me-2"></i>Book Demo
                    </button>
                </div>
                <div class="hero-stats mt-5">
                    <div class="row text-center">
                        <div class="col-4">
                            <h3 class="text-warning">95%</h3>
                            <small class="text-white-50">Accuracy Rate</small>
                        </div>
                        <div class="col-4">
                            <h3 class="text-warning">&lt;30s</h3>
                            <small class="text-white-50">Analysis Time</small>
                        </div>
                        <div class="col-4">
                            <h3 class="text-warning">100%</h3>
                            <small class="text-white-50">HIPAA Compliant</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="ai-preview-card">
                        <div class="card border-0 shadow-lg">
                            <div class="card-header bg-dark text-white">
                                <div class="d-flex align-items-center">
                                    <div class="status-indicator bg-success me-2"></div>
                                    <span>AI Analysis in Progress</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="medical-image-placeholder">
                                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                            <p class="text-muted mt-2">Chest X-Ray</p>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <h6>Analysis Results</h6>
                                        <div class="analysis-result">
                                            <div class="mb-2">
                                                <span class="badge bg-success">Normal</span>
                                                <span class="float-end">98.5%</span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="badge bg-warning">Pneumonia</span>
                                                <span class="float-end">1.2%</span>
                                            </div>
                                            <div class="mb-2">
                                                <span class="badge bg-danger">COVID-19</span>
                                                <span class="float-end">0.3%</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5" id="features">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Powerful AI Capabilities</h2>
                <p class="section-subtitle text-muted">
                    Advanced medical imaging analysis powered by cutting-edge AI technology
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check text-primary"></i>
                    </div>
                    <h4>HIPAA Compliant</h4>
                    <p class="text-muted">End-to-end encryption, comprehensive audit logging, and strict access controls ensure complete HIPAA compliance.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <i class="bi bi-lightning-charge text-warning"></i>
                    </div>
                    <h4>Lightning Fast</h4>
                    <p class="text-muted">Get AI-powered analysis results in under 30 seconds, dramatically reducing diagnosis time.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-card text-center">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up text-success"></i>
                    </div>
                    <h4>95% Accuracy</h4>
                    <p class="text-muted">State-of-the-art AI models trained on millions of medical images for exceptional accuracy.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- AI Demo Section -->
<section class="demo-section py-5 bg-light" id="demo">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Experience ClarusAI</h2>
                <p class="section-subtitle text-muted">
                    See how our AI analyzes medical images in real-time
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <div class="chat-demo-container">
                    <button class="btn btn-primary btn-lg w-100" onclick="openAIDemo()">
                        <i class="bi bi-robot me-2"></i>
                        Launch AI Assistant Demo
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Use Cases Section -->
<section class="use-cases-section py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title">Medical Specialties</h2>
                <p class="section-subtitle text-muted">
                    Supporting multiple medical imaging specialties
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="use-case-card">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-lungs text-primary mb-3" style="font-size: 2.5rem;"></i>
                            <h5>Pulmonology</h5>
                            <p class="text-muted">Chest X-rays, CT scans for pneumonia, COVID-19, and lung abnormalities</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="use-case-card">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-heart text-danger mb-3" style="font-size: 2.5rem;"></i>
                            <h5>Cardiology</h5>
                            <p class="text-muted">Cardiac imaging analysis for heart conditions and abnormalities</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="use-case-card">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-brain text-info mb-3" style="font-size: 2.5rem;"></i>
                            <h5>Neurology</h5>
                            <p class="text-muted">Brain imaging analysis for neurological conditions and injuries</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="use-case-card">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-person-check text-success mb-3" style="font-size: 2.5rem;"></i>
                            <h5>General Medicine</h5>
                            <p class="text-muted">Comprehensive imaging analysis across multiple medical specialties</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section py-5 bg-dark text-white" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title text-white">Ready to Transform Your Practice?</h2>
                <p class="section-subtitle text-white-50 mb-4">
                    Join leading healthcare institutions using ClarusAI
                </p>
                <div class="row g-3 justify-content-center">
                    <div class="col-auto">
                        <button class="btn btn-warning btn-lg">
                            <i class="bi bi-calendar me-2"></i>Schedule Demo
                        </button>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-light btn-lg">
                            <i class="bi bi-envelope me-2"></i>Contact Sales
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        line-height: 1.6;
    }

    .status-indicator {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .medical-image-placeholder {
        background: #f8f9fa;
        border: 2px dashed #dee2e6;
        border-radius: 8px;
        padding: 2rem 1rem;
        text-align: center;
    }

    .feature-card {
        padding: 2rem 1rem;
    }

    .feature-icon i {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .section-subtitle {
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .ai-preview-card {
        position: relative;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .chat-demo-container {
        padding: 3rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .use-case-card .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
        }
    }
</style>

<script>
    function scrollToDemo() {
        document.getElementById('demo').scrollIntoView({ behavior: 'smooth' });
    }

    function scrollToContact() {
        document.getElementById('contact').scrollIntoView({ behavior: 'smooth' });
    }

    function openAIDemo() {
        window.location.href = '/ai-chat';
    }
</script>
